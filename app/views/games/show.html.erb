<%= turbo_stream_from @game %>

<div class="container mx-auto p-6">
  <h1 class="text-3xl font-bold text-center mb-6">Game Board</h1>

  <div id="<%= dom_id(@game) %>" class="bg-white p-6 rounded-lg shadow-md">
    <% if @game.creator && @game.joiner %>
      <%= render @game, user: Current.user %>
    <% else %>
      <p class="text-lg text-gray-600 text-center mb-4">Waiting for another player to join...</p>
      
      <% if current_user == @game.creator %>
        <p class="text-center text-gray-700">
          Share this URL with a friend to join:
          <a href="<%= game_url(@game) %>" class="text-blue-600 hover:underline" target="_blank"><%= game_url(@game) %></a>
        </p>
      <% end %>
    <% end %>
  </div>
</div>
